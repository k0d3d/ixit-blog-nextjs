{% include "elements/header.twig" %}
<!-- header area start from here-->
{% include "elements/components/header.twig" with {'defaultHeader': 'default-header'} %}
<div class="card-banner-area checkout-bg dark-overlay" style="background-image:url(assets/img/checkout-bg.jpg);">
    <div class="container">
        <div class="row">
            <div class="card-banner-content left-line">
                <h1>Checkout</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Checkout</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<main class="main-content-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 m-auto">
                <div class="customer-information">
                    <h3>Billing Information</h3>
                    <form>
                        <div class="form-group-wrapper">
                            <div class="form_group">
                                <label>First Name<span>*</span></label>
                                <input type="text">
                            </div>
                            <div class="form_group">
                                <label>last Name</label>
                                <input type="text">
                            </div>
                        </div>
                        <div class="form-group-wrapper">
                            <div class="form_group">
                                <label>Email<span>*</span></label>
                                <input type="email">
                            </div>
                            <div class="form_group">
                                <label>Phone<span>*</span></label>
                                <input type="number">
                            </div>
                        </div>
                        <div class="form-group-wrapper">
                            <div class="form_group">
                                <label>Address</label>
                                <input type="text">
                            </div>
                            <div class="form_group fixd-width">
                                <label>Post Code</label>
                                <input type="text">
                            </div>
                        </div>
                        <div class="form-group-wrapper">
                            <div class="form_group fixd-width">
                                <label>City</label>
                                <input type="text">
                            </div>
                            <div class="form_group fixd-width">
                                <label>Country</label>
                                <input type="text">
                            </div>
                        </div>
                    </form>
                    <div class="review-checkbox">
                        <label class="label-check check_out">
                            <input type="checkbox" class="check-input">
                            <span class="checked"></span>
                            <span class="checked-content">Click here to indicate that you have read and agree to the terms presented in the Terms and Conditions agreement</span>
                        </label>
                    </div>
                </div>
                <div class="shipping-area">
                    <h3>Shipping Information</h3>
                    <div class="shipping-option">
                        <div class="review-checkbox">
                            <label class="label-check check_out">
                                <input type="radio" class="check-input" name="payment">
                                <span class="checked"></span>
                                <span class="checked-content">Same as Billing Information</span>
                            </label>
                        </div>
                        <div class="review-checkbox">
                            <label class="label-check check_out">
                                <input type="radio" class="check-input" name="payment">
                                <span class="checked"></span>
                                <span class="checked-content">Set a new Address</span>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="payment-area">
                    <h3>Payment Method</h3>
                    <div class=" payment-option">
                        <div class="review-checkbox">
                            <label class="label-check check_out">
                                <input type="radio" class="check-input" name="shipping">
                                <span class="checked"></span>
                                <span class="checked-content">Credit Card</span>
                            </label>
                        </div>
                        <div class="review-checkbox">
                            <label class="label-check check_out">
                                <input type="radio" class="check-input" name="shipping">
                                <span class="checked"></span>
                                <span class="checked-content"><img src="assets/img/paypal.png" alt=""></span>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="product-info-area">
                    <table class="table product-table">
                        <thead>
                            <tr>
                            <th scope="col"></th>
                            <th scope="col">Product Info</th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">
                                    <img src="assets/img/svg/close-svg.svg" alt="">
                                </th>
                                <td class="product-info" data-title="Product Info">
                                    <a href="#">
                                        <img src="assets/img/product-img1.png" alt=""> 
                                        <p>Combo Flower Vase</p>
                                    </a>
                                </td>
                                <td data-title="Quantity">
                                    <div class="input-number-wrapper">
                                        <button class="increase"><img src="assets/img/svg/arrow-top.svg" alt=""></button>
                                        <input type="text" value="1"/>
                                        <button class="decrease"><img src="assets/img/svg/arrow-bottom.svg" alt=""></button>
                                    </div>
                                </td>
                                <td data-title="Price">$9.05</td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="checkout-dtls">
                        <div class="checkout-shipping checkout-comon-width">
                            <h3>Shipping</h3>
                            <h5>* * Free Shipping</h5>
                        </div>
                        <div class="checkout-amount checkout-comon-width">
                            <h4>Sub Total</h4>
                            <h5>$40.45</h5>
                        </div>
                        <div class="checkout-total-cost checkout-comon-width bdr-right">
                            <h4>Total</h4>
                            <h3>$40.45</h3>
                        </div>
                    </div>
                    <div class="confirm-order">
                        <div class="review-checkbox">
                            <label class="label-check check_out">
                                <input type="checkbox" class="check-input" name="shipping">
                                <span class="checked"></span>
                                <span class="checked-content">I accept the Terms of Service</span>
                            </label>
                        </div>
                        <button class="btn btn-md btn-orange">Confirm Order</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


{% include "elements/components/footer.twig" %}
{% include "elements/footer.twig" %}
</body>
</html>